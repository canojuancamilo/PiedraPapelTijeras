@model FrontendPiedraPapelTijera.Models.IniciarPartidaViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="offset-4 col-4">
    <div class="card" style="margin-top: 140px;">
        <div class="card-body">
            <div class="form-group">
                <form id="formularioIniciarPartida" data-url="@Url.Action("IniciarPartida","Home")">

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.PrimerJugador, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.PrimerJugador, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PrimerJugador, null, new { @class = "help-block text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.SegundoJugador, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.SegundoJugador, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SegundoJugador, null, new { @class = "help-block text-danger" })
                    </div>

                    <div class="text-center">
                        <button id="iniciarPartidaBtn" type="submit" class="btn btn-primary"> Iniciar partida</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
}